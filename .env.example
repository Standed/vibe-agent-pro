# Video Agent Pro - Environment Variables
# 复制此文件为 .env.local 并填入你的 API 密钥

# ===================================
# Supabase 配置（数据库 + 认证）
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase 服务端密钥（仅用于 API Routes，不要暴露给前端！）
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===================================
# Cloudflare R2 存储配置（图片/视频/音频）
# ===================================
# R2 存储桶名称
R2_BUCKET_NAME=vibe-agent-media

# R2 API 凭证（从 Cloudflare Dashboard 获取）
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# R2 Endpoint（格式: https://<account_id>.r2.cloudflarestorage.com）
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# R2 公开访问域名（配置自定义域名或使用 R2.dev 域名）
NEXT_PUBLIC_R2_PUBLIC_URL=https://media.your-domain.com
# 或使用 Cloudflare 提供的域名: https://pub-xxxxx.r2.dev

# ===================================
# Gemini API
# ===================================
# 从 Google AI Studio 获取: https://makersuite.google.com/app/apikey
# 文本/脚本/对话
GEMINI_TEXT_API_KEY=your_gemini_text_api_key_here
# 图片生成/编辑（Grid/单图）
GEMINI_IMAGE_API_KEY=your_gemini_image_api_key_here
# Agent 智能体推断/工具调用（可与文本复用）
GEMINI_AGENT_API_KEY=your_gemini_agent_api_key_here
# 兼容旧配置（可选）：NEXT_PUBLIC_GEMINI_API_KEY / GEMINI_API_KEY / NEXT_GEMINI_API_KEY

# ===================================
# Volcano Engine API (用于视频生成)
# ===================================
# 从火山引擎控制台获取: https://console.volcengine.com/ark
NEXT_PUBLIC_VOLCANO_API_KEY=your_volcano_api_key_here
NEXT_PUBLIC_VOLCANO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# 模型 ID
NEXT_PUBLIC_SEEDREAM_MODEL_ID=your_seedream_model_id
NEXT_PUBLIC_SEEDANCE_MODEL_ID=your_seedance_model_id
NEXT_PUBLIC_DOUBAO_MODEL_ID=your_doubao_model_id

# ===================================
# TTS 语音合成配置
# ===================================
NEXT_PUBLIC_TTS_APPID=your_tts_appid
NEXT_PUBLIC_TTS_ACCESS_TOKEN=your_tts_access_token
NEXT_PUBLIC_TTS_SECRET_KEY=your_tts_secret_key
NEXT_PUBLIC_TTS_VOICE_TYPE=BV700_V2_streaming

# ===================================
# 日志和监控（可选）
# ===================================
# Sentry DSN (用于错误追踪，可选)
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===================================
# 项目配置
# ===================================
# 项目名称
NEXT_PUBLIC_APP_NAME=Video Agent Pro
# 默认视频分辨率
NEXT_PUBLIC_DEFAULT_VIDEO_WIDTH=1920
NEXT_PUBLIC_DEFAULT_VIDEO_HEIGHT=1080
# 默认 FPS
NEXT_PUBLIC_DEFAULT_FPS=30

# ===================================
# 🔧 积分系统配置（可选，支持环境变量覆盖）
# ===================================

# 初始积分配置
# INITIAL_CREDITS_ADMIN=1000    # 管理员初始积分（默认 1000）
# INITIAL_CREDITS_VIP=500       # VIP 初始积分（默认 500）
# INITIAL_CREDITS_USER=60       # 普通用户初始积分（默认 60）

# VIP 折扣率（0.8 = 8折，默认 0.8）
# VIP_DISCOUNT_RATE=0.8

# 管理员是否免费（true/false，默认 true）
# ADMIN_FREE=true

# 管理员邮箱列表（逗号分隔，可通过环境变量动态添加）
# ADMIN_EMAILS=admin1@example.com,admin2@example.com

# VIP 用户邮箱列表（逗号分隔）
# VIP_EMAILS=vip1@example.com,vip2@example.com

# ===================================
# 🔧 AI 操作积分消耗配置（可选）
# ===================================
# 以下配置可覆盖默认积分消耗，格式：CREDITS_<操作名称>=数值

# Gemini 系列（图片生成）
# CREDITS_GEMINI_GRID=10          # Grid 图片生成 (默认 3x3)
# CREDITS_GEMINI_GRID_2X2=5       # 2x2 Grid
# CREDITS_GEMINI_GRID_3X3=10      # 3x3 Grid
# CREDITS_GEMINI_IMAGE=8          # 单张图片生成
# CREDITS_GEMINI_TEXT=2           # 文本生成（聊天、剧本）
# CREDITS_GEMINI_ANALYZE=3        # 图片分析
# CREDITS_GEMINI_EDIT=5           # 图片编辑

# SeeDream 系列
# CREDITS_SEEDREAM_GENERATE=12    # SeeDream 图片生成
# CREDITS_SEEDREAM_EDIT=10        # SeeDream 图片编辑

# 火山引擎系列
# CREDITS_VOLCANO_GENERATE=12     # 火山引擎图片生成
# CREDITS_VOLCANO_VIDEO=50        # 视频生成（较贵）

# 其他操作
# CREDITS_UPLOAD_PROCESS=1        # 图片上传处理
# CREDITS_BATCH_OPERATION=5       # 批量操作基础费用
