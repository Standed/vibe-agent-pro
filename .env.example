# Vibe Agent Pro - Environment Variables
# 复制此文件为 .env.local 并填入你的 API 密钥

# ===================================
# Gemini API (用于 Grid 多视图生成)
# ===================================
# 从 Google AI Studio 获取: https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# Volcano Engine API (用于视频生成)
# ===================================
# 从火山引擎控制台获取: https://console.volcengine.com/ark
NEXT_PUBLIC_VOLCANO_API_KEY=your_volcano_api_key_here
NEXT_PUBLIC_VOLCANO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# 模型 ID
NEXT_PUBLIC_SEEDREAM_MODEL_ID=your_seedream_model_id
NEXT_PUBLIC_SEEDANCE_MODEL_ID=your_seedance_model_id
NEXT_PUBLIC_DOUBAO_MODEL_ID=your_doubao_model_id

# ===================================
# TTS 语音合成配置
# ===================================
NEXT_PUBLIC_TTS_APPID=your_tts_appid
NEXT_PUBLIC_TTS_ACCESS_TOKEN=your_tts_access_token
NEXT_PUBLIC_TTS_SECRET_KEY=your_tts_secret_key
NEXT_PUBLIC_TTS_VOICE_TYPE=BV700_V2_streaming

# ===================================
# 项目配置
# ===================================
# 项目名称
NEXT_PUBLIC_APP_NAME=Vibe Agent Pro
# 默认视频分辨率
NEXT_PUBLIC_DEFAULT_VIDEO_WIDTH=1920
NEXT_PUBLIC_DEFAULT_VIDEO_HEIGHT=1080
# 默认 FPS
NEXT_PUBLIC_DEFAULT_FPS=30
